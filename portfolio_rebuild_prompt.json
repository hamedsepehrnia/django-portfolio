{
  "project_type": "Django Portfolio Website",
  "project_name": "SkyPardaz Portfolio",
  "description": "A modern, bilingual (English/Farsi) portfolio website with animated 3D starfield background, dark mode, and full content management system",
  
  "technology_stack": {
    "backend": {
      "framework": "Django 4.2.11+",
      "python_version": "3.12",
      "database": "SQLite3",
      "dependencies": [
        "Django>=4.2.11",
        "django-modeltranslation>=0.18.12",
        "Pillow>=10.0.0",
        "python-decouple>=3.8",
        "whitenoise>=6.7.0"
      ]
    },
    "frontend": {
      "libraries": [
        "Three.js r128 (CDN)",
        "GSAP 3.12.2 with ScrollTrigger and ScrollToPlugin (CDN)"
      ],
      "fonts": {
        "english": ["Inter", "Poppins", "Sora"],
        "persian": ["Vazirmatn", "Inter", "Poppins"]
      }
    }
  },

  "project_structure": {
    "root_directory": "skypardaz",
    "django_app": "portfolio",
    "main_settings": "skypardaz/settings.py",
    "urls": {
      "root": "skypardaz/urls.py",
      "app": "portfolio/urls.py"
    },
    "templates": "portfolio/templates/portfolio/",
    "static_files": {
      "css": "portfolio/static/portfolio/css/",
      "js": "portfolio/static/portfolio/js/",
      "images": "portfolio/static/portfolio/img/",
      "admin_css": "portfolio/static/admin/css/",
      "admin_js": "portfolio/static/admin/js/"
    },
    "media_files": "media/",
    "locale_files": "locale/"
  },

  "django_settings": {
    "secret_key": "Use python-decouple config('SECRET_KEY')",
    "debug": "Use python-decouple config('DEBUG', default=False, cast=bool)",
    "allowed_hosts": "Use python-decouple config('ALLOWED_HOSTS', default='skypardaz.ir,www.skypardaz.ir', cast=Csv())",
    "installed_apps": [
      "modeltranslation (MUST be before django.contrib.admin)",
      "django.contrib.admin",
      "django.contrib.auth",
      "django.contrib.contenttypes",
      "django.contrib.sessions",
      "django.contrib.messages",
      "django.contrib.staticfiles",
      "django.contrib.sitemaps",
      "portfolio"
    ],
    "middleware": [
      "django.middleware.security.SecurityMiddleware",
      "whitenoise.middleware.WhiteNoiseMiddleware",
      "django.contrib.sessions.middleware.SessionMiddleware",
      "django.middleware.locale.LocaleMiddleware",
      "django.middleware.common.CommonMiddleware",
      "django.middleware.csrf.CsrfViewMiddleware",
      "django.contrib.auth.middleware.AuthenticationMiddleware",
      "django.contrib.messages.middleware.MessageMiddleware",
      "django.middleware.clickjacking.XFrameOptionsMiddleware"
    ],
    "internationalization": {
      "language_code": "fa",
      "languages": [
        ["en", "English"],
        ["fa", "فارسی"]
      ],
      "locale_paths": ["BASE_DIR / 'locale'"],
      "time_zone": "UTC",
      "use_i18n": true,
      "use_l10n": true,
      "use_tz": true
    },
    "modeltranslation": {
      "default_language": "en",
      "languages": ["en", "fa"],
      "fallback_languages": ["en", "fa"]
    },
    "static_files": {
      "static_url": "/static/",
      "static_root": "BASE_DIR / 'staticfiles'",
      "staticfiles_dirs": ["BASE_DIR / 'static'"],
      "staticfiles_storage": "whitenoise.storage.CompressedManifestStaticFilesStorage"
    },
    "media_files": {
      "media_url": "/media/",
      "media_root": "Use python-decouple config('MEDIA_ROOT', default=str(BASE_DIR / 'media'))"
    },
    "templates": {
      "backend": "django.template.backends.django.DjangoTemplates",
      "context_processors": [
        "django.template.context_processors.debug",
        "django.template.context_processors.request",
        "django.contrib.auth.context_processors.auth",
        "django.contrib.messages.context_processors.messages",
        "django.template.context_processors.i18n",
        "portfolio.context_processors.site_settings"
      ]
    }
  },

  "database_models": {
    "Hero": {
      "description": "Hero section content for homepage",
      "fields": {
        "title": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "subtitle": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "description": "TextField(blank=True, null=True) - TRANSLATED",
        "is_active": "BooleanField(default=True)"
      },
      "translation_fields": ["title", "subtitle", "description"]
    },
    "About": {
      "description": "About section content blocks",
      "fields": {
        "title": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "content": "TextField(blank=True, null=True) - TRANSLATED",
        "order": "IntegerField(default=0)",
        "is_active": "BooleanField(default=True)"
      },
      "meta": {
        "ordering": ["order", "id"]
      },
      "translation_fields": ["title", "content"]
    },
    "TeamSection": {
      "description": "Team showcase section header",
      "fields": {
        "title": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "subtitle": "TextField(blank=True, null=True) - TRANSLATED",
        "is_active": "BooleanField(default=True)"
      },
      "translation_fields": ["title", "subtitle"]
    },
    "TeamMember": {
      "description": "Team member information",
      "fields": {
        "name": "CharField(max_length=120) - TRANSLATED",
        "role": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "bio": "TextField(blank=True, null=True) - TRANSLATED",
        "photo": "ImageField(upload_to='team/', blank=True, null=True)",
        "linkedin_url": "URLField(blank=True, null=True)",
        "instagram_url": "URLField(blank=True, null=True)",
        "github_url": "URLField(blank=True, null=True)",
        "order": "IntegerField(default=0)",
        "is_active": "BooleanField(default=True)"
      },
      "meta": {
        "ordering": ["order", "id"]
      },
      "translation_fields": ["name", "role", "bio"]
    },
    "Service": {
      "description": "Service items with SVG icons",
      "fields": {
        "title": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "description": "TextField(blank=True, null=True) - TRANSLATED",
        "icon_svg": "TextField - SVG code for icon",
        "order": "IntegerField(default=0)",
        "is_active": "BooleanField(default=True)"
      },
      "meta": {
        "ordering": ["order", "id"]
      },
      "translation_fields": ["title", "description"]
    },
    "Technology": {
      "description": "Technologies used in portfolio items",
      "fields": {
        "name": "CharField(max_length=100)",
        "order": "IntegerField(default=0)",
        "is_active": "BooleanField(default=True)"
      },
      "meta": {
        "ordering": ["order", "name"]
      },
      "note": "NOT TRANSLATED - technology names are universal"
    },
    "PortfolioItem": {
      "description": "Portfolio project items",
      "fields": {
        "title": "CharField(max_length=200, blank=True, null=True) - TRANSLATED",
        "description": "TextField(blank=True, null=True) - TRANSLATED",
        "image": "ImageField(upload_to='portfolio/', blank=True, null=True)",
        "portfolio_type": "CharField with choices: 'online' or 'offline'",
        "url": "URLField(blank=True, null=True) - Only for online portfolios",
        "offline_file": "FileField(upload_to='portfolio/offline/', blank=True, null=True) - ZIP file for offline portfolios",
        "technologies": "ManyToManyField(Technology, blank=True)",
        "order": "IntegerField(default=0)",
        "is_active": "BooleanField(default=True)"
      },
      "meta": {
        "ordering": ["order", "id"]
      },
      "validation": {
        "online": "URL is required when portfolio_type='online'",
        "offline": "offline_file is required when portfolio_type='offline'"
      },
      "image_optimization": {
        "max_width": 1920,
        "max_height": 1920,
        "jpeg_quality": 85,
        "webp_quality": 80,
        "auto_convert": "PNG without transparency -> JPEG, others optimized"
      },
      "translation_fields": ["title", "description"]
    },
    "SiteSetting": {
      "description": "Global site settings",
      "fields": {
        "site_title": "CharField(max_length=200) - TRANSLATED",
        "is_active": "BooleanField(default=True)",
        "updated_at": "DateTimeField(auto_now=True)"
      },
      "meta": {
        "ordering": ["-updated_at", "-id"]
      },
      "translation_fields": ["site_title"]
    },
    "ContactInfo": {
      "description": "Contact information",
      "fields": {
        "email": "EmailField",
        "phone": "CharField(max_length=20)",
        "telegram_url": "URLField(blank=True, null=True)",
        "instagram_url": "URLField(blank=True, null=True)",
        "is_active": "BooleanField(default=True)"
      },
      "note": "NOT TRANSLATED - contact info is universal"
    },
    "ContactMessage": {
      "description": "Contact form submissions",
      "fields": {
        "name": "CharField(max_length=200)",
        "email": "EmailField",
        "subject": "CharField(max_length=200)",
        "message": "TextField",
        "created_at": "DateTimeField(auto_now_add=True)",
        "is_read": "BooleanField(default=False)"
      },
      "meta": {
        "ordering": ["-created_at"]
      }
    }
  },

  "admin_configuration": {
    "hero_admin": {
      "class": "TranslationAdmin",
      "list_display": ["title", "subtitle", "is_active"],
      "list_filter": ["is_active"],
      "search_fields": ["title", "subtitle"]
    },
    "about_admin": {
      "class": "TranslationAdmin",
      "list_display": ["title", "order", "is_active"],
      "list_filter": ["is_active"],
      "search_fields": ["title", "content"],
      "ordering": ["order", "id"]
    },
    "team_member_admin": {
      "class": "TranslationAdmin",
      "list_display": ["name", "role", "order", "is_active"],
      "list_filter": ["is_active"],
      "search_fields": ["name", "role", "bio"],
      "ordering": ["order", "id"]
    },
    "team_section_admin": {
      "class": "TranslationAdmin",
      "list_display": ["title", "is_active"],
      "list_filter": ["is_active"],
      "search_fields": ["title", "subtitle"]
    },
    "service_admin": {
      "class": "TranslationAdmin",
      "list_display": ["title", "order", "is_active"],
      "list_filter": ["is_active"],
      "search_fields": ["title", "description"],
      "ordering": ["order", "id"]
    },
    "technology_admin": {
      "class": "ModelAdmin (NOT TranslationAdmin)",
      "list_display": ["name", "order", "is_active"],
      "list_filter": ["is_active"],
      "search_fields": ["name"],
      "ordering": ["order", "name"],
      "list_editable": ["order", "is_active"]
    },
    "portfolio_item_admin": {
      "class": "TranslationAdmin",
      "list_display": ["title", "portfolio_type", "order", "is_active"],
      "list_filter": ["portfolio_type", "is_active"],
      "search_fields": ["title", "description"],
      "ordering": ["order", "id"],
      "fieldsets": [
        "Basic Information: title, description, image, order, is_active",
        "Portfolio Type: portfolio_type",
        "Technologies: technologies (filter_horizontal)",
        "Online Portfolio: url (only shown when type=online)",
        "Offline Portfolio: offline_file (only shown when type=offline)"
      ],
      "custom_js": "portfolio_admin.js - toggles fields based on portfolio_type",
      "custom_css": "portfolio_admin.css"
    },
    "contact_info_admin": {
      "class": "ModelAdmin",
      "list_display": ["email", "phone", "telegram_url", "instagram_url", "is_active"],
      "list_filter": ["is_active"]
    },
    "contact_message_admin": {
      "class": "ModelAdmin",
      "list_display": ["name", "email", "subject", "created_at", "is_read"],
      "list_filter": ["is_read", "created_at"],
      "search_fields": ["name", "email", "subject", "message"],
      "readonly_fields": ["created_at"],
      "ordering": ["-created_at"],
      "list_editable": ["is_read"],
      "date_hierarchy": "created_at"
    },
    "site_setting_admin": {
      "class": "TranslationAdmin",
      "list_display": ["site_title", "is_active", "updated_at"],
      "list_filter": ["is_active"]
    }
  },

  "url_patterns": {
    "root_urls": {
      "admin": "path('admin/', admin.site.urls)",
      "i18n": "path('i18n/setlang/', set_language, name='set_language')",
      "sitemap": "path('sitemap.xml', sitemap, {'sitemaps': sitemaps}, name='sitemap')",
      "portfolio": "i18n_patterns(path('', include('portfolio.urls')), prefix_default_language=True)"
    },
    "portfolio_urls": {
      "index": "path('', views.index, name='index')",
      "contact": "path('contact/', views.contact, name='contact')",
      "portfolio_view": "path('portfolio/<int:portfolio_id>/', views.portfolio_view, name='view')"
    }
  },

  "views": {
    "index": {
      "description": "Main portfolio page",
      "functionality": [
        "Get all active content: heroes, about_items, team_section, team_members, services, portfolio_items, contact_info",
        "Pass to template 'portfolio/index.html'"
      ]
    },
    "contact": {
      "description": "Handle contact form submission",
      "method": "POST only",
      "functionality": [
        "Extract: name, email, subject, message from POST",
        "Validate all fields are filled",
        "Create ContactMessage object",
        "Show success/error message using Django messages framework",
        "Redirect to index preserving current language"
      ]
    },
    "portfolio_view": {
      "description": "View for displaying offline portfolio",
      "functionality": [
        "Get PortfolioItem by id and is_active=True",
        "If portfolio_type='online': redirect to item.url",
        "If portfolio_type='offline': serve offline_file as FileResponse with as_attachment=True"
      ]
    }
  },

  "templates": {
    "base_template": {
      "file": "portfolio/templates/portfolio/base.html",
      "features": [
        "Loads static files and i18n",
        "Sets lang and dir attributes based on LANGUAGE_CODE",
        "RTL support: dir='rtl' when LANGUAGE_CODE='fa'",
        "Conditional font loading: Vazirmatn for Persian, Sora for English",
        "Conditional CSS: styles-fa.css for Persian",
        "Three.js canvas container (#canvas-container)",
        "Cursor trail element (.cursor-trail)",
        "Navigation with logo, menu, dark mode toggle, language switcher",
        "Messages container for Django messages",
        "Footer",
        "Scripts: Three.js, GSAP, ScrollTrigger, ScrollToPlugin, custom script.js"
      ],
      "navigation": {
        "logo": "portfolio/img/logo.png",
        "menu_items": ["Home", "About", "Services", "Portfolio", "Contact"],
        "dark_mode_toggle": "Button with moon/sun icons",
        "language_switcher": "Shows opposite language (EN/FA)"
      }
    },
    "index_template": {
      "file": "portfolio/templates/portfolio/index.html",
      "sections": [
        {
          "id": "home",
          "class": "hero",
          "content": "Hero section with title, subtitle, description from first active Hero",
          "features": ["Scroll indicator with animated arrow"]
        },
        {
          "id": "about",
          "class": "section about-section",
          "content": [
            "Section title: 'About Us'",
            "About items loop (from about_items)",
            "Team showcase (if team_members exist)",
            "Team section title/subtitle from TeamSection",
            "Team member cards with photo, name, role, bio, social links"
          ]
        },
        {
          "id": "services",
          "class": "section services-section",
          "content": [
            "Section title: 'Our Services'",
            "Services grid with icon (SVG), title, description",
            "Horizontal scroll container for services"
          ]
        },
        {
          "id": "portfolio",
          "class": "section portfolio-section",
          "content": [
            "Section title: 'Portfolio'",
            "Portfolio grid",
            "Each item: image (lazy-loaded), title, description, technologies tags",
            "Links: online portfolios -> external URL, offline portfolios -> portfolio view URL"
          ]
        },
        {
          "id": "contact",
          "class": "section contact-section",
          "content": [
            "Two-column layout: contact info + contact form",
            "Contact info: email, phone, telegram, instagram from ContactInfo",
            "Contact form: name, email, subject, message with CSRF token",
            "Form submits to portfolio:contact URL"
          ]
        }
      ]
    }
  },

