  "translation_setup": {
    "package": "django-modeltranslation",
    "translation_file": "portfolio/translation.py",
    "registered_models": [
      "Hero: title, subtitle, description",
      "About: title, content",
      "TeamSection: title, subtitle",
      "TeamMember: name, role, bio",
      "Service: title, description",
      "PortfolioItem: title, description",
      "SiteSetting: site_title"
    ],
    "locale_path": "locale/",
    "languages": ["en", "fa"],
    "translation_commands": [
      "python manage.py makemigrations",
      "python manage.py migrate",
      "python manage.py makemessages -l fa",
      "python manage.py compilemessages"
    ]
  },

  "sitemap": {
    "file": "portfolio/sitemaps.py",
    "classes": [
      "StaticViewSitemap - for index page",
      "PortfolioItemSitemap - for portfolio items"
    ],
    "features": [
      "i18n support",
      "changefreq and priority settings",
      "Only active portfolio items"
    ]
  },

  "context_processors": {
    "file": "portfolio/context_processors.py",
    "function": "site_settings(request)",
    "returns": {
      "site_settings": "Active SiteSetting object",
      "site_title": "Translated site title or default"
    }
  },

  "admin_customization": {
    "javascript": {
      "file": "portfolio/static/admin/js/portfolio_admin.js",
      "functionality": "Shows/hides online/offline fields based on portfolio_type selection"
    },
    "css": {
      "file": "portfolio/static/admin/css/portfolio_admin.css",
